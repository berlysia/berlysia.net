{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "run-s build:seed build:partytown build:next",
    "build:partytown": "partytown copylib public/~partytown",
    "build:seed": "run-p 'build:seed:*'",
    "build:seed:local": "tsx --tsconfig ./tsconfig.script.json src/seeds/localBuild.ts",
    "build:seed:remote": "tsx --tsconfig ./tsconfig.script.json src/seeds/remoteBuild.ts",
    "build:next": "next build",
    "start": "next start",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md,js,ts,jsx,tsx}'",
    "format:check": "prettier --check '**/*.{json,md,js,ts,jsx,tsx}'",
    "test": "jest",
    "test:vrt:ci": "playwright test",
    "test:vrt": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.32.2-focal /bin/bash -c 'yarn test:vrt:ci'",
    "test:vrt:update": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.32.2-focal /bin/bash -c 'yarn test:vrt:ci -u'",
    "clean": "del dist",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@berlysia/eslint-config": "4.1.0",
    "@berlysia/tsconfig": "0.0.1",
    "@mdx-js/loader": "^2.3.0",
    "@next/mdx": "^13.3.0",
    "@playwright/test": "1.32.2",
    "@storybook/addon-actions": "6.5.16",
    "@storybook/addon-essentials": "6.5.16",
    "@storybook/addon-links": "6.5.16",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.5.16",
    "@types/eslint": "8.37.0",
    "@types/fs-extra": "11.0.2",
    "@types/hast": "^2.3.4",
    "@types/jest": "29.5.5",
    "@types/lodash": "4.14.199",
    "@types/mdast": "^3.0.11",
    "@types/node": "18.18.4",
    "@types/prettier": "2.7.3",
    "@types/react": "18.2.25",
    "@types/react-dom": "18.2.11",
    "@types/rebass": "4.0.11",
    "@types/unist": "^2.0.6",
    "autoprefixer": "10.4.14",
    "del-cli": "5.0.0",
    "eslint": "8.37.0",
    "eslint-config-next": "latest",
    "jest": "29.5.0",
    "lint-staged": "13.2.3",
    "mdast-util-mdx-jsx": "^2.1.2",
    "npm-run-all": "4.1.5",
    "playwright": "1.32.2",
    "postcss": "8.4.24",
    "prettier": "2.8.7",
    "tailwindcss": "3.3.2",
    "tailwindcss-logical": "^3.0.0",
    "ts-jest": "29.1.1",
    "tsx": "^3.13.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@builder.io/partytown": "^0.8.0",
    "@fortawesome/fontawesome-svg-core": "^6.2.1",
    "@fortawesome/free-brands-svg-icons": "^6.2.1",
    "@fortawesome/free-solid-svg-icons": "^6.2.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@rebass/preset": "^4.0.5",
    "clsx": "^1.2.1",
    "fs-extra": "^11.0.0",
    "lodash": "^4.17.21",
    "next": "^13.3.0",
    "next-mdx-remote": "^4.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx": "^2.1.5",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-smartypants": "^2.0.0",
    "rss-parser": "^3.12.0",
    "unified": "^10.1.2",
    "zod": "^3.19.1"
  },
  "packageManager": "yarn@3.5.0"
}
