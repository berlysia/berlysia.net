{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "preview": "astro preview",
    "check": "astro check",
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md,js,ts,jsx,tsx,astro}'",
    "format:check": "prettier --check '**/*.{json,md,js,ts,jsx,tsx,astro}'",
    "test": "jest",
    "test:vrt:ci": "playwright test",
    "test:vrt": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.28.0-focal /bin/bash -c 'yarn test:vrt:ci'",
    "test:vrt:update": "docker run --rm --volume $(pwd):/workdir/ --workdir /workdir/ -it mcr.microsoft.com/playwright:v1.28.0-focal /bin/bash -c 'yarn test:vrt:ci -u'",
    "clean": "del dist",
    "build": "run-s build:seed build:astro",
    "build:astro": "astro build",
    "build:seed": "ts-node src/seeds/build.ts",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@berlysia/eslint-config": "3.4.0",
    "@berlysia/tsconfig": "0.0.1",
    "@playwright/test": "1.28.0",
    "@storybook/addon-actions": "6.5.12",
    "@storybook/addon-essentials": "6.5.12",
    "@storybook/addon-links": "6.5.12",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.5.13",
    "@types/eslint": "8.4.10",
    "@types/fs-extra": "9.0.13",
    "@types/jest": "29.2.3",
    "@types/lodash": "4.14.190",
    "@types/node": "16.18.3",
    "@types/prettier": "2.7.1",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "@types/rebass": "4.0.10",
    "autoprefixer": "10.4.13",
    "del-cli": "5.0.0",
    "eslint": "8.28.0",
    "jest": "29.3.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "playwright": "1.28.0",
    "postcss": "8.4.19",
    "prettier": "2.7.1",
    "prettier-plugin-astro": "0.7.0",
    "tailwindcss": "3.2.4",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.3"
  },
  "dependencies": {
    "@astrojs/mdx": "^0.11.6",
    "@astrojs/partytown": "^1.0.1",
    "@astrojs/react": "^1.2.2",
    "@astrojs/tailwind": "^2.1.2",
    "@astrojs/vercel": "^2.3.4",
    "@fortawesome/fontawesome-svg-core": "^6.0.0",
    "@fortawesome/free-brands-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@jsdevtools/rehype-toc": "^3.0.2",
    "@rebass/preset": "^4.0.5",
    "astro": "^1.6.10",
    "clsx": "^1.1.1",
    "fs-extra": "^10.0.0",
    "gray-matter": "^4.0.3",
    "lodash": "^4.17.21",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-accessible-emojis": "^0.3.2",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "rehype-stringify": "^9.0.3",
    "remark": "^14.0.2",
    "remark-frontmatter": "^4.0.1",
    "remark-gfm": "^3.0.1",
    "remark-mdx": "^2.1.5",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "remark-smartypants": "^2.0.0",
    "rss-parser": "^3.12.0",
    "unified": "^10.1.2",
    "zod": "^3.19.1"
  },
  "packageManager": "yarn@3.3.0"
}
