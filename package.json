{
  "name": "berlysia-net",
  "version": "0.0.0",
  "description": "",
  "author": "berlysia <berlysia@gmail.com>",
  "main": "index.js",
  "license": "MIT",
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "scripts": {
    "lint": "eslint 'src/**/*.{js,ts,jsx,tsx}'",
    "lint:fix": "npm-run-all 'lint -- --fix'",
    "format": "prettier --write '**/*.{json,md}'",
    "test": "jest",
    "clean": "del dist",
    "dev": "next",
    "build": "run-s build:seed build:next",
    "build:next": "next build",
    "build:seed": "ts-node src/seeds/build.ts",
    "export": "next export",
    "start": "next start",
    "deploy": "yarn build && yarn export",
    "typecheck": "tsc --noEmit",
    "prepare": "git config --local core.hooksPath .githooks && echo 'githooks installed' || echo 'githooks install failed'",
    "precommit": "lint-staged",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@berlysia/eslint-config": "3.4.0",
    "@berlysia/tsconfig": "0.0.1",
    "@next/eslint-plugin-next": "13.0.2",
    "@storybook/addon-actions": "6.5.12",
    "@storybook/addon-essentials": "6.5.12",
    "@storybook/addon-links": "6.5.12",
    "@storybook/addon-postcss": "2.0.0",
    "@storybook/react": "6.5.12",
    "@types/babel__core": "7.1.19",
    "@types/eslint": "8.4.10",
    "@types/fs-extra": "9.0.13",
    "@types/html-webpack-plugin": "3.2.6",
    "@types/jest": "29.1.2",
    "@types/lodash": "4.14.186",
    "@types/node": "16.11.66",
    "@types/prettier": "2.7.1",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "@types/rebass": "4.0.10",
    "@types/webpack": "5.28.0",
    "@types/webpack-dev-server": "4.7.1",
    "autoprefixer": "10.4.13",
    "babel-loader": "8.2.5",
    "del-cli": "5.0.0",
    "eslint": "8.27.0",
    "html-webpack-plugin": "5.5.0",
    "jest": "29.0.3",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.18",
    "prettier": "2.7.1",
    "tailwindcss": "3.2.2",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.11.1"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.0.0",
    "@fortawesome/free-brands-svg-icons": "^6.0.0",
    "@fortawesome/free-solid-svg-icons": "^6.0.0",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@rebass/preset": "^4.0.5",
    "clsx": "^1.1.1",
    "fs-extra": "^10.0.0",
    "lodash": "^4.17.21",
    "next": "13.0.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rss-parser": "^3.12.0"
  },
  "packageManager": "yarn@3.2.4"
}
